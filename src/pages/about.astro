---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "About";

const identity = {
    firstName: "Neel",
    country: "India",
    occupation: "Student",
    hobbies: ["watching football", "doing math"],
};
import "../styles/global.css";
---

<BaseLayout pageTitle={pageTitle}>
    <section class="max-w-3xl mx-auto py-10 px-4">
        <h1
            class="bg-gradient-to-r
            from-blue-600
            via-green-500
            to-indigo-400
            inline-block
            text-transparent
            bg-clip-text
            text-4xl
            md:text-5xl
            font-extrabold
            mb-6
            drop-shadow
            leading-tight
            overflow-visible"
        >
            About Me
        </h1>

        <div class="space-y-4">
            {/* ‚Üê Add vertical spacing here */}
            <p>Here are a few facts about me:</p>
            <ul class="space-y-2">
                {/* Optional: spacing between list items */}
                <li>My name is {identity.firstName}.</li>
                <li>
                    I live in {identity.country} and I work as a {
                        identity.occupation
                    }.
                </li>
                {
                    identity.hobbies.length >= 2 && (
                        <li>
                            Two of my hobbies are: {identity.hobbies[0]} and{" "}
                            {identity.hobbies[1]}
                        </li>
                    )
                }
            </ul>
        </div>
    </section>
</BaseLayout>
